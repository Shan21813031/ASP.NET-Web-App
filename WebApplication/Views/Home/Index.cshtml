@model IEnumerable<Post>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .card{
        margin-bottom:20px;
    }
</style>

<div class="row">
    <div class="col-8">
        <form asp-action="Index" asp-controller="home" method="get">
            <div class="form-group">
                <label for="exampleInputEmail1">Search an advert</label>
                <input type="text" class="form-control" name="search" aria-describedby="emailHelp" placeholder="Enter title of advert" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
<hr />
<br />
@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-12">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/Images/card image.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <a asp-action="Detail" asp-controller="Home" asp-route-Id="@item.Id" class="btn btn-primary">View Advert</a>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <p>Advert data not found.</p>
        </div>
    </div>
}
